{
  "name": "ella-math",
  "version": "0.2.3",
  "description": "Basic geometry and linear algebra library",
  "main": "dist/ella.umd.js",
  "types": "dist/ella.d.ts",
  "scripts": {
    "test": "jest",
    "docs": "typedoc && touch docs/.nojekyll",
    "build:types": "tsc -t esnext --moduleResolution node -d --emitDeclarationOnly --outFile dist/ella.d.ts src/ella.ts",
    "build:js": "rollup -c rollup.config.js",
    "build": "npm run build:js -s && npm run build:types -s"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terabaud/ella.git"
  },
  "author": "Lea Rosema",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terabaud/ella/issues"
  },
  "homepage": "https://github.com/terabaud/ella#readme",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/jest": "^25.2.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.10.3",
    "ts-jest": "^26.0.0",
    "tslib": "^2.0.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
