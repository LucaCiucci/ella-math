{
  "name": "ella-math",
  "version": "0.4.3",
  "description": "Basic geometry and linear algebra library",
  "main": "dist/ella.umd.js",
  "types": "dist/ella.d.ts",
  "module": "dist/ella.esm.min.js",
  "exports": {
    ".": {
      "require": "./dist/ella.umd.min.js",
      "import": "./dist/ella.esm.min.js"
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "docs": "typedoc && touch docs/.nojekyll",
    "build:types": "tsc -t esnext --moduleResolution node -d --emitDeclarationOnly --outFile dist/ella-math.d.ts src/ella-math.ts",
    "build:js": "rollup -c rollup.config.js",
    "build:minjs:umd": "terser dist/ella.umd.js --compress --mangle > dist/ella.umd.min.js",
    "build:minjs:esm": "terser dist/ella.esm.js --compress --mangle > dist/ella.esm.min.js",
    "build:minjs": "npm run build:minjs:esm -s && npm run build:minjs:umd -s",
    "build": "npm run build:js -s && npm run build:minjs -s && npm run build:types -s"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": "github:terabaud/ella-math/",
  "author": "Lea Rosema",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terabaud/ella-math/issues"
  },
  "homepage": "https://terabaud.github.io/ella-math/",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.32.1",
    "terser": "^5.3.8",
    "ts-jest": "^26.4.3",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
